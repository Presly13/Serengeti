<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridItemActivity">

    <TextView
        android:id="@+id/griddata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Nike Aptare SE Lifestyle Shoes"
        app:fontFamily="serif-monospace"
        android:textColor="#000"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/nike_aptare_se_lifestyle_shoes"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/griddata"
        android:layout_marginTop="27dp"/>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="179dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="9.5" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkBox1"
        android:layout_alignRight="@+id/checkBox1"
        android:layout_alignTop="@+id/checkBox4"
        android:text="10" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/checkBox1"
        android:layout_marginStart="129dp"
        android:layout_marginLeft="129dp"
        android:text="10.5" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_marginBottom="133dp"
        android:text="11" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/checkBox1"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:text="11.5" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkBox5"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignTop="@+id/checkBox2"
        android:text="12" />

    <TextView
        android:id="@+id/ShoeSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="225dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="serif-monospace"
        android:text="SHOE SIZE" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="63dp"
        android:layout_toEndOf="@+id/checkBox3"
        android:layout_toRightOf="@+id/checkBox3"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:fontFamily="serif-monospace"
        android:text="PURCHASE" />
</RelativeLayout>